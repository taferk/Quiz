<form method="get" action="/quizes">
    <label for="search">
        Filtrar preguntas por:
        <input id="search" name="search" type="text" placeholder="Texto a buscar" />
        <input type="submit" value="Filtrar" />
    </label>
</form>
<table>
    <% var i; for (i=0; i<quizes.length; i++) { %>
        <tr>
            <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
            <td><a href="quizes/<%= quizes[i].id %>/edit">editar</a></td>
            <td>
                <form method="post" action="/quizes/<%=quizes[i].id%>?_method=delete">
                    <button type="submit" onclick="return confirm('¿Seguro que desea borrar esta pregunta?')">borrar</button>
                 </form>
            </td>
        </tr>
    <% } %>
</table>

<a href="/quizes/new"><button type="button">Nueva pregunta</button></a>